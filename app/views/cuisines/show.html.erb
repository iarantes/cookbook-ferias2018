<h1><%= @cuisine.name %></h1>

<p><%= flash[:notice] %></p>

<% if @recipes.present? %>
  <%= @recipes.each do |r| %>
    <h1><%= r.title %></h1>
    <li><%= r.recipe_type %></li>
    <li><%= r.cuisine.name %></li>
    <li><%= r.difficulty %></li>
    <li><%= r.cook_time %> minutos</li>
  <% end %>
<% else %>
  Nenhuma receita encontrada para este tipo de cozinha
<% end %>
