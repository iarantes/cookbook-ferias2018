<h1>Nova Receita</h1>

<p><%= alert %></p>

<% @recipe.errors.full_messages.each do |erro| %>
  <p><%= erro %></p>
<% end %>

<%= form_for @recipe do |r| %>
  <div>
    <%= r.label :title, "TÃ­tulo" %>
    <%= r.text_field :title %>
  </div>

  <div>
    <%= r.label :recipe_type, "Tipo da Receita" %>
    <%= r.text_field :recipe_type %>
  </div>

  <div>
    <%= r.label :cuisine_id, "Cozinha" %>
    <%= r.collection_select(:cuisine_id, @cuisines, :id, :name) %>
  </div>

  <div>
    <%= r.label :difficulty, "Dificuldade" %>
    <%= r.text_field :difficulty %>
  </div>

  <div>
    <%= r.label :cook_time, "Tempo de Preparo" %>
    <%= r.text_field :cook_time %>
  </div>

  <div>
    <%= r.label :ingredients, "Ingredientes" %>
    <%= r.text_area :ingredients %>
  </div>

  <div>
    <%= r.label :cook_method, "Como Preparar" %>
    <%= r.text_area :cook_method %>
  </div>
  <%= r.submit "Enviar" %>
<% end %>